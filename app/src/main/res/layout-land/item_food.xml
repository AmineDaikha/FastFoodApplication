<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="250sp"
    android:layout_height="450sp"
    android:layout_gravity="center_horizontal|center_vertical"
    android:paddingLeft="7sp"
    android:paddingEnd="7sp">


    <RelativeLayout
        android:id="@+id/contnet"
        android:layout_width="250sp"
        android:layout_height="350sp"
        android:layout_centerVertical="true"
        android:background="@drawable/img_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20sp"
            android:orientation="horizontal">
            <!--            first part -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:minLines="3"
                    android:layout_marginLeft="15sp"
                    android:fontFamily="@font/moutarde"
                    android:text="Pizza Royal Pizza Royal Pizza Royal"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/descFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15sp"
                    android:fontFamily="@font/hoyle"
                    android:text="Pizza à pâte fine et croustillante richement garnie de tomates, de jambon, de champignons et de fromage, surgelée" />

                <TextView
                    android:id="@+id/priceFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15sp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="200.00"
                    android:textColor="@color/black2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingEnd="7sp">

                <RelativeLayout
                    android:id="@+id/plusQuantity"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle">

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_add" />

                </RelativeLayout>

                <!--                <ImageView-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:layout_width="25dp"-->
                <!--                    android:layout_height="25dp"-->
                <!--                    android:src="@drawable/ic_remove_circle" />-->

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="@font/lato_light"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/minusQuantity"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle">

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_remove" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <!--            first part -->
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgPlat"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/contnet"
        android:layout_alignTop="@+id/contnet"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="-30sp"
        android:src="@drawable/ic_launcher_background" />

    <android.widget.Button
        android:id="@+id/addToCmd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/contnet"
        android:layout_alignBottom="@+id/contnet"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="-1sp"
        android:layout_marginBottom="-40sp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/green"
        android:drawableLeft="@drawable/ic_shopping"
        android:paddingLeft="15sp"
        android:text="Ajouter"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>